nav.navbar.navbar-default.navbar-fixed-top
	.container
		.navbar-header
			button.navbar-toggle.collapsed(type='button' data-toggle='collapse' data-target='#navbar')
				span.icon-bar
				span.icon-bar
				span.icon-bar
			a.navbar-brand(href='/')
				| [ Logo ]
				//- img.img-responsive(src='')

		#navbar.collapse.navbar-collapse
			ul.nav.navbar-nav
				li(ng-repeat='item in strings.header.navbar.items track by $index' ng-class='{"active": $index == 0}' name='{{item.name}}')
					a(ng-href='{{item.href}}') {{item.title}}

.outdoor(ng-show='currentPath == "/"')
	img(name='parallax' src='https://s-media-cache-ak0.pinimg.com/originals/af/f1/cf/aff1cfdb975366126633cca2d48a39e9.jpg' du-parallax y='header.parallax')
	.cover
		h2.title.text-center.text-gray-dark
			| {{strings.header.banner.title}}
		h4.subtitle.text-center.text-gray-dark.text-line-spacing
			| {{strings.header.banner.subtitle}}
		div.text-center
			a.btn.btn-primary.btn-lg(ng-href='{{strings.header.banner.button.href}}') {{strings.header.banner.button.caption}}